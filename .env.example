# IoT Water Tank Website Configuration
# Copy this file to .env and update the values

PORT=3000
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=yourpassword
MYSQL_DATABASE=smart_tank
ESP32_API_KEY=your-secret-key
TANK_HEIGHT_CM=100
REFRESH_INTERVAL_MS=5000

# PUMP_CONTROL_PASSWORD should be a bcrypt hash, not plain text
# Generate a hash using: npm run hash-password
# or: node utils/hash-password.js "your-actual-password"
PUMP_CONTROL_PASSWORD=$2b$12$abcdefghijklmnopqrstuvwxyz123456789

MAX_HISTORY_MINUTES_AGO=60